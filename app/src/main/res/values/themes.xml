<resources>
    <!-- Base application theme. -->
    <style name="Theme.AlarmApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_700</item>


        <item name="popupMenuStyle">@style/Base.PopMenu</item>
        <item name="materialButtonStyle">@style/Base.MaterialButton</item>
    </style>

    <style name="Base.PopMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/pop_menu_background</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="colorControlNormal">@color/red</item>
    </style>

    <style name="Base.MaterialButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="backgroundTint">@color/blue_800</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_fade_in</item>
        <item name="android:windowExitAnimation">@anim/translate_fade_out</item>
    </style>
</resources>