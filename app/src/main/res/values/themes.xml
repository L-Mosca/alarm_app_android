<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlarmApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_700</item>
        <!-- Customize your theme here. -->

        <item name="popupMenuStyle">@style/Base.PopMenu</item>
    </style>

    <style name="Base.PopMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/pop_menu_background</item>
        <item name="android:colorControlNormal">@color/red</item>
        <item name="colorControlNormal">@color/red</item>
    </style>

</resources>